{
  "name": "yuefa",
  "version": "1.0.0",
  "description": "约发 - Cosplay假发造型师的移动端H5工具",
  "private": true,
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "dev:web": "pnpm --filter @yuefa/web dev",
    "dev:server": "pnpm --filter @yuefa/server dev",
    "build": "pnpm -r build",
    "build:web": "pnpm --filter @yuefa/web build",
    "test": "pnpm -r test",
    "test:web": "pnpm --filter @yuefa/web test",
    "test:server": "pnpm --filter @yuefa/server test",
    "test:e2e": "pnpm --filter @yuefa/web test:e2e",
    "lint": "pnpm -r lint",
    "docker:dev": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker build -t yuefa-app .",
    "deploy:staging": "s deploy -y --use-local",
    "deploy:prod": "ENV=prod NODE_ENV=production s deploy -y --use-local"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
