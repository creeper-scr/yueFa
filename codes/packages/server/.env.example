# 服务端口
PORT=4000

# JWT密钥 (生产环境请使用更复杂的密钥)
JWT_SECRET=yuefa_jwt_secret_dev_2024

# JWT过期时间 (7天)
JWT_EXPIRES_IN=7d

# ==================== 数据库配置 ====================
# 方式1: PostgreSQL 连接字符串 (生产环境推荐)
# DATABASE_URL=postgres://user:password@host:5432/dbname

# 方式2: SQLite 文件路径 (开发环境)
DB_PATH=./data/yuefa.db

# 强制使用 PostgreSQL (可选，设置后忽略 DB_PATH)
# DB_TYPE=postgres

# PostgreSQL 分离配置 (如果不使用 DATABASE_URL)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=yuefa
# DB_USER=postgres
# DB_PASSWORD=

# ==================== 阿里云OSS配置 ====================
# 开发阶段可以留空，使用本地文件存储
OSS_ACCESS_KEY_ID=
OSS_ACCESS_KEY_SECRET=
OSS_BUCKET=
OSS_REGION=

# ==================== 阿里云短信配置 ====================
# 开发阶段使用模拟验证码
SMS_ACCESS_KEY_ID=
SMS_ACCESS_KEY_SECRET=
SMS_SIGN_NAME=
SMS_TEMPLATE_CODE=

# ==================== 环境模式 ====================
NODE_ENV=development
